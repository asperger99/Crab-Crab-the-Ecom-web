<div class="container mt-5">
    <h1><small>Place Your Order For </small><%=orderfor%> </h1>
<div class="row">
    <div class="col-sm-8">
      <div class="card" >
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form name="myForm" action="/order/confirmed" method="POST" onsubmit="return validateOrderData()">
            <div class="form-group" id="fname">
              <label>First Name</label>
              <input type="text" class="form-control" name="firstname" required><span class="formerror"> </span>
            </div>
            <div class="form-group" id="lname">
              <label>Last Name</label>
              <input type="text" class="form-control"  name="lastname" required><span class="formerror"> </span>
            </div>
            <div class="form-group" id="mobileNo">
                <label >Mobile No.</label>
                <input type="tel" class="form-control"  name="mobile" pattern="[0-9]{10}" placeholder="eg: 8887776655"  required><span class="formerror" > </span>
              </div>
              <div class="form-group" id="Address">
                <label>Address</label>
                <input type="text" class="form-control"  name="address" required><span class="formerror"> </span>
              </div>
              <div class="form-group" id="Quan">
                <label>Quantity</label>
                <input type="number" value=1 class="form-control"  name="quantity" required><span class="formerror"> </span>
              </div>
            <button type="submit" class="btn btn-dark" value="<%=orderfor%>" name="confirmbuybtn">Place Order</button>
          </form>

        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <h1 style="padding-top:50px;padding-left:20px;"><i class="fas fa-people-carry fa-6x"></i></h1>
    </div>

</div>

