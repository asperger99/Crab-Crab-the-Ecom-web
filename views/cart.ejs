<div class="container">
     <h1 style="color:#ada065;"><small >Your Cart</small></h1>

<%cart.products.forEach(function(cartitems){%>

        <!-- Project One -->
        <div class="row">
          <div class="col-md-7">
            <a href="#">
              <img class="img-fluid rounded mb-3 mb-md-0 product-img" src="/images/<%=cartitems.stuff%>/<%=cartitems.brand%>/<%=cartitems.pname%>.jpg" alt="<%=cartitems.pname%>">
            </a>
          </div>
          <div class="col-md-5">
            <h2><%=cartitems.pname%></h2>
            <!-- <p><%=cartitems%></p> -->
            <%if(cartitems.stuff==="Mobile"){%>
              <ul>
               <li>Ram: <%=cartitems.ram%></li>
               <li>Rom: <%=cartitems.rom%></li>
               <li>Battery: <%=cartitems.brand%> </li>
               <li>Front Camera: <%=cartitems.frontcamera%> </li>
               <li>Rear Camera: <%=cartitems.rearcamera%> </li>
               <li>Color: <%=cartitems.color%></li>
             </ul>
            <%}%>
            <!-- <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p> -->
          <div class="form-inline mt-2 mt-md-0">
            <form action="/order" method="POST" style="margin-right:10px;">
              <button class="btn btn-dark" type="submit" value="<%=cartitems.pname%>" name="buybtn"> Buy now</button>
            </form>
            <form action="/removecart" method="POST">
             <button class="btn btn-secondary" type="submit" value="<%=cartitems.pname%>" name="removebtn">-Remove</button>
            </form>
          </div>
          </div>
        </div>
        <!-- /.row -->
        <hr>

<%});%>
</div>



