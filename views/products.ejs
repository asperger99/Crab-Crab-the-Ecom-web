</div>

<%allProducts.forEach(function(product){%>
 
  

<div class="container">

    <!-- Project One -->
    <div class="row">
      <div class="col-md-7">
        <a href="#">

          <img class="img-fluid rounded mb-3 mb-md-0 product-img" src="/images/<%=product.stuff%>/<%=product.brand%>/<%=product.pname%>.jpg" alt="<%=product.brand%> <%=product.pname%>">
        </a>
      </div>
      <div class="col-md-5">
        <h2><%=product.pname%></h2>
        <%if(product.stuff==="Mobile"){%>
         <ul>
          <li>Ram: <%=product.ram%></li>
          <li>Rom: <%=product.rom%></li>
          <li>Battery: <%=product.brand%> </li>
          <li>Front Camera: <%=product.frontcamera%> </li>
          <li>Rear Camera: <%=product.rearcamera%> </li>
          <li>Color: <%=product.color%></li>
        </ul> 
       <%}%>

       <%if(product.stuff==="Laptop"){%>
        <ul>
         <li>Ram: <%=product.ram%></li>
         <li>Rom: <%=product.rom%></li>
         <li>Battery: <%=product.brand%> </li>
         <li>Front Camera: <%=product.frontcamera%> </li>
         <li>Rear Camera: <%=product.rearcamera%> </li>
         <li>Color: <%=product.color%></li>
       </ul> 
      <%}%>

      <%if(product.stuff==="Headphone"){%>
        <ul>
         <li>Ram: <%=product.ram%></li>
         <li>Rom: <%=product.rom%></li>
         <li>Battery: <%=product.brand%> </li>
         <li>Front Camera: <%=product.frontcamera%> </li>
         <li>Rear Camera: <%=product.rearcamera%> </li>
         <li>Color: <%=product.color%></li>
       </ul> 
      <%}%>
       
   <div class="form-inline mt-2 mt-md-0">
     <form  action="/order" method="POST" style="margin-right:10px;">
      <button class="btn btn-dark" type="submit" value="<%=product.pname%>" name="buybtn"> Buy now</button>
    </form>

    <form  action="/cart" method="POST">
   <button class="btn btn-secondary" type="submit" value="<%=product.pname%>" name="cartbtn">+ to cart</button>
  </form>
   </div>



      </div>
    </div>
    <!-- /.row -->

    <hr>
  </div>
  <!-- /.container -->
<%});%>

